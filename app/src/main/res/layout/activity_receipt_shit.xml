<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.taehong.payzee.ConfirmPage"
    android:background="#FFF6B9"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Receipt"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#A06FBF"
        android:padding="5dp"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="post"
        android:textSize="30dp"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steak of Cow -- $3"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/textView6"
        android:textSize="30dp"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juice of Berries -- $5"
        android:id="@+id/textView10"
        android:layout_marginTop="41dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cookies  -- $10"
        android:id="@+id/textView11"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terry&apos;s Berries -- $9"
        android:id="@+id/textView12"
        android:layout_marginTop="41dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit of Baskets -- $9"
        android:id="@+id/textView13"
        android:layout_marginTop="32dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:textColor="#191919" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL: $36"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:textColor="#191919" />

</RelativeLayout>
