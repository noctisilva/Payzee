<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.taehong.payzee.ConfirmPage"
    android:background="#FFF6B9"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schcedule"
        android:id="@+id/textView"
        android:layout_marginTop="36dp"
        android:textColor="#A06FBF"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1337"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="130dp"
        android:textColor="#8A8DDB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call for help"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="50dp"
        android:background="#96D6CE"
        android:textColor="#ffffff"
        android:layout_above="@+id/paynowId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:45 AM"
        android:id="@+id/paynowId"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="50dp"
        android:background="#8A8DDB"
        android:textColor="#ffffff"
        android:autoText="true"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survey"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="50dp"
        android:background="#A06FBF"
        android:textColor="#ffffff"
        android:autoText="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
